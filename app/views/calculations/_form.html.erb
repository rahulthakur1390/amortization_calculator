<%= form_with(model: calculation, local: true) do |form| %>
  <% if calculation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(calculation.errors.count, "error") %> prohibited this calculation from being saved:</h2>

      <ul>
      <% calculation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Loan Amount</label>
    <%= form.number_field :loan_amount, class: "form-control col-sm-2" %>
  </div>

  <div class="form-group">
    <label>Terms (in month)</label>
    <%= form.number_field :terms, class: "form-control col-sm-2" %>
  </div>

  <div class="form-group">
    <label>Interest Rate</label>
    <%= form.number_field :interest_rate, class: "form-control col-sm-2" %>
  </div>

  <div class="form-group">
    <label>Start Date</label>
    <%= form.date_select :start_date, class: "form-control col-sm-2" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
